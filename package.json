{
  "name": "rocha",
  "description": "Runs Mocha unit tests but randomizes their order",
  "main": "index.js",
  "version": "0.0.0-semantic-release",
  "bin": {
    "rocha": "bin/rocha.js"
  },
  "dependencies": {
    "chalk": "1.1.1",
    "check-more-types": "2.10.0",
    "debug": "2.2.0",
    "lazy-ass": "1.3.0",
    "lodash": "3.10.1",
    "mocha": "2.3.4",
    "simple-bin-help": "1.5.1"
  },
  "files": [
    "bin",
    "index.js"
  ],
  "scripts": {
    "test": "npm run mocha",
    "random": "node --harmony bin/rocha.js spec/tricky-spec.js",
    "mocha": "mocha spec/**/*-spec.js spec/fixed-spec.js",
    "lint": "standard bin/*.js *.js spec/*.js",
    "commit": "commit-wizard",
    "issues": "git-issues",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/rocha.git"
  },
  "preferGlobal": true,
  "keywords": [
    "mocha",
    "cli",
    "unit",
    "test",
    "testing",
    "random",
    "randomize",
    "shuffle"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/rocha/issues"
  },
  "homepage": "https://github.com/bahmutov/rocha#readme",
  "devDependencies": {
    "git-issues": "1.2.0",
    "pre-git": "3.1.2",
    "semantic-release": "6.0.3",
    "standard": "5.4.1"
  },
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm run lint",
        "npm run mocha"
      ],
      "pre-push": [
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  }
}
